<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/two_rows_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id = "@+id/order_item_top"
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id = "@+id/order_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textSize="20sp"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:text = "Order ID"/>

        <TextView
            android:id="@+id/order_detail_text"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fadeScrollbars="false"
            android:layout_below="@id/order_id_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:padding = "16dp"
            android:text = "Small Coffee"/>

        <Button
            android:id = "@+id/done_button"
            android:layout_alignParentBottom="true"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text = "UNDO"/>

    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/order_item_bottom"
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id = "@+id/order_id_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background = "@color/dark_blue"
            android:textColor = "@color/white"
            android:textSize="20sp"
            android:text = "Order ID"/>

        <TextView
            android:id="@+id/order_detail_text2"
            android:layout_below="@id/order_id_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding = "16dp"
            android:textSize="20sp"
            android:text = "Small Coffee"/>

        <Button
            android:id = "@+id/done_button2"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp"
            android:layout_marginTop="8dp"
            android:textColor = "@color/white"
            android:background="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "UNDO"/>

    </RelativeLayout>

</LinearLayout>